{
  "name": "${projectname}",
  "version": "0.0.1",
  "description": "",
  "packageManager": "${pkgManager}@${pkgManagerVersion}",
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "${yourname}",
  "license": "MIT",
  "homepage": "https://github.com/${yourname}/${projectname}#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/${yourname}/${projectname}.git"
  },
  "bugs": {
    "url": "https://github.com/${yourname}/${projectname}/issues"
  },
  "keywords": [],
  "scripts": {
    "dev": "unbuild --stub",
    "build": "unbuild",
    "prepublishOnly": "npm run build",
    "release": "bumpp && npm publish",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint"
  },
  "devDependencies": {
    "@dnzng/eslint-config-ts": "^0.1.5",
    "bumpp": "^9.1.1",
    "eslint": "^8.45.0",
    "lint-staged": "^13.2.3",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.1.6",
    "unbuild": "^2.0.0",
    "vitest": "^0.33.0"
  },
  "simple-git-hooks": {
    "pre-commit": "${pkgManagerNpx} lint-staged && ${pkgManagerNpx} typecheck"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "eslint --fix"
    ]
  }
}
